<UserControl
    x:Class="IGA_GUI_Module.View.MainView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:avalonDock="https://github.com/Dirkster99/AvalonDock"
    xmlns:viewModel="clr-namespace:IGA_GUI_Module.ViewModel"
    d:DataContext="{d:DesignInstance Type=viewModel:MainViewModel,
                                     IsDesignTimeCreatable=True}"
    d:DesignHeight="800"
    d:DesignWidth="1600"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/IGA_MVVM_Module;component/View/Style/Theme.xaml" />
                <ResourceDictionary Source="/IGA_MVVM_Module;component/ResourceDictionary/DataTemplate.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <!--  Layout: Top Menu + full-area DockingManager  -->
    <Grid Style="{StaticResource RootGridStyle}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!--  Menu  -->
            <RowDefinition Height="*" />
            <!--  Docking Area  -->
        </Grid.RowDefinitions>

        <!--  Top menu bar  -->
        <Menu Grid.Row="0">
            <MenuItem Name="MenuFile" Header="파일">
                <MenuItem Name="MenuFileSave" Header="저장" Command="{Binding MenuFileSaveCommand}"/>
                <MenuItem Name="MenuFileOpen" Header="불러오기" Command="{Binding MenuFileOpenCommand}" />
                <Separator />
                <MenuItem Name="MenuFileImportData" Header="데이터 불러오기" Command="{Binding MenuFileImportDataCommand}" />
                <MenuItem Name="MenuFileExportData" Header="데이터 저장" Command="{Binding MenuFileExportDataCommand}"/>
            </MenuItem>
            <MenuItem Name="MenuAnalysis" Header="분석">
                <MenuItem Name="MenuAnalysisDrawGraph" Header="그래프" Command="{Binding MenuAnalysisDrawGraphCommand}" />
                <Separator />
                <MenuItem Name="MenuAnalysisFindMax" Header="최댓값 찾기" Command="{Binding MenuAnalysisFindMaxCommand}" />
                <MenuItem Name="MenuAnalysisFindMin" Header="최솟값 찾기" Command="{Binding MenuAnalysisFindMinCommand}" />
                <Separator />
                <MenuItem Name="MenuAnalysisRegression" Header="회귀 분석" Command="{Binding MenuAnalysisRegressionCommand}" />
                <MenuItem Name="MenuAnalysisStatistics" Header="통계" Command="{Binding MenuAnalysisStatisticsCommand}" />
            </MenuItem>
        </Menu>

        <!--  AvalonDock DockingManager  -->
        <avalonDock:DockingManager
            Name="DockManager"
            Grid.Row="1"
            Margin="8"
            DocumentsSource="{Binding Documents}"
            ActiveContent="{Binding ActiveDocument, Mode=TwoWay}"
            AllowMixedOrientation="True">

            <!-- Document Header Template -->
            <avalonDock:DockingManager.DocumentHeaderTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Content.Title}" VerticalAlignment="Center" />
                    </StackPanel>
                </DataTemplate>
            </avalonDock:DockingManager.DocumentHeaderTemplate>

            <!-- Document Pane Template Selector -->
            <avalonDock:DockingManager.LayoutItemContainerStyle>
                <Style TargetType="{x:Type avalonDock:LayoutItem}">
                    <Setter Property="Title" Value="{Binding Model.Title}" />
                    <Setter Property="CloseCommand" Value="{Binding Model.CloseCommand}" />
                    <Setter Property="CanClose" Value="{Binding Model.CanClose}" />
                </Style>
            </avalonDock:DockingManager.LayoutItemContainerStyle>

            <!-- Document Content Template -->
            <avalonDock:DockingManager.LayoutItemTemplate>
                <DataTemplate>
                    <ContentControl Content="{Binding Content}" />
                </DataTemplate>
            </avalonDock:DockingManager.LayoutItemTemplate>

            <!-- Initial Layout -->
            <avalonDock:LayoutRoot>
                <avalonDock:LayoutPanel Orientation="Horizontal">
                    <avalonDock:LayoutDocumentPaneGroup>
                        <avalonDock:LayoutDocumentPane />
                    </avalonDock:LayoutDocumentPaneGroup>
                </avalonDock:LayoutPanel>
            </avalonDock:LayoutRoot>
        </avalonDock:DockingManager>

        <!--  빈 상태 안내 메시지  -->
        <TextBlock Grid.Row="1"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="16"
                   Foreground="{StaticResource Brush.Text.Muted}"
                   Text="파일 > 불러오기 또는 데이터 불러오기로 CSV 파일을 열어주세요.">
            <TextBlock.Style>
                <Style TargetType="TextBlock">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Documents.Count}" Value="0">
                            <Setter Property="Visibility" Value="Visible" />
                        </DataTrigger>
                    </Style.Triggers>
                    <Setter Property="Visibility" Value="Collapsed" />
                </Style>
            </TextBlock.Style>
        </TextBlock>
    </Grid>
</UserControl>
